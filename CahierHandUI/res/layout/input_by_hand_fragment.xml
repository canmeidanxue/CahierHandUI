<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_fragment_background_color"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip_input_by_hand"
            android:textColor="@color/merchant_type_text_color" />

        <EditText
            android:id="@+id/et_input_by_hand"
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_form_selector"
            android:editable="false" />
        <requestFocus />
    </LinearLayout>

    <com.wizarpos.cashier.util.KeyboardLayoutEx
        android:id="@+id/keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentBottom="true">
   </com.wizarpos.cashier.util.KeyboardLayoutEx>
	<Button
	    android:id="@+id/key_ok" 
	    android:layout_alignTop="@id/keyboard"
	    android:layout_toRightOf="@id/keyboard"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/btn_selector_digit_ok"
	    />
</RelativeLayout>