<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include
        android:id="@+id/c_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        layout="@layout/component_fragment_title" />

    <LinearLayout
        android:id="@+id/ll_cashier_desk"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_cash"
            android:contentDescription="@string/app_name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/cashier_desk"
            android:textSize="18sp"
            android:alpha="0.5"
            android:textColor="#000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#f3f3f3"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/ll_net_print"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_printer"
            android:contentDescription="@string/app_name"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:alpha="0.5"
            android:text="@string/net_print"
            android:textColor="#000"
            android:textSize="18sp"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#f3f3f3"
        android:orientation="horizontal"/>
    <LinearLayout
        android:id="@+id/ll_offline_syn_data"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/icon_data" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:alpha="0.5"
            android:textColor="#000"
            android:textSize="18sp"
            android:text="@string/offline_syn_data" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#f3f3f3"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>