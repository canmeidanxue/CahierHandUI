<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/buttom_bar_group"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout style="@style/ButtomBar" >

            <ImageButton
                android:id="@+id/buttom_more"
                style="@style/ButtomBarImgBtn"
                android:background="@drawable/btn_selector_more"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>

        <RelativeLayout style="@style/ButtomBar" >

            <ImageButton
                android:id="@+id/buttom_wait_for_pay"
                style="@style/ButtomBarImgBtn"
                android:background="@drawable/btn_selector_going_pay"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>

        <RelativeLayout style="@style/ButtomBar" >

            <ImageButton
                android:id="@+id/buttom_member_card"
                style="@style/ButtomBarImgBtn"
                android:background="@drawable/btn_selector_member"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>

        <RelativeLayout 
            android:clickable="true"
            android:id="@+id/re_go_pay"
            style="@style/ButtomBar" >

            <ImageButton
                android:id="@+id/go_pay"
                 android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_selector_pay"
                android:contentDescription="@string/app_name" />
            <TextView 
                android:layout_below="@id/go_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:textColor="@color/orange"
                android:text="1222.80å…ƒ"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
